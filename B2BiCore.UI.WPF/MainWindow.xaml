<Window x:Class="B2BiCore.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B2BiCore.UI.WPF"
        mc:Ignorable="d"
        Title="B2Bi Core Processor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Grid.Row="0" Margin="0 0 0 20">
            <MenuItem Header="_File">
                <MenuItem x:Name="newProject" Header="_New Project" />
                <MenuItem x:Name="openProject" Header="_Open Project" />
                <MenuItem x:Name="exitMenuItem" Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="aboutMenuITem" Header="About"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="content" Grid.Row="1"/>
    </Grid>
</Window>
